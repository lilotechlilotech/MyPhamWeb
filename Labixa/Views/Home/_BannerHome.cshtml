        HttpCookie cookie = Request.Cookies["_culture"];
    }*@
@model IEnumerable<Outsourcing.Data.Models.WebsiteAttribute>


@{
    Outsourcing.Data.Models.WebsiteAttribute[] arraySlide = Model.Cast<Outsourcing.Data.Models.WebsiteAttribute>().ToArray();
}

    <style>
        .d-md-block {
            display: block !important
        }
    </style>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            @for (int i = 1; i < arraySlide.Length; i++)
            {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>  
            }
            
            
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                @{
                    var firstSlide = Model.First();
                }

                <img class="d-block w-100" src="../Content/MyPham/assets/img/banner_img.png" alt="@Model.First().Name">


            </div>
            @if (Model != null)
            {
                
                for (int i = 1; i < arraySlide.Length; i++)
                {

                    <div class="carousel-item">
                        <img class="d-block w-100" src="../Content/MyPham/assets/img/banner_img.png" alt="@arraySlide[i].Name">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- slider Area Start -->
