@using PagedList;
@using PagedList.Mvc;
@using Outsourcing.Core.Common
@model PagedList.IPagedList<Outsourcing.Data.Models.Blog>

    <style>
        .pagination-container {
            display: inline-block
        }

            .pagination-container .pagination .active a {
                background-color: #236d5f;
                border-radius: 5px;
                box-sizing: border-box;
                color: #f5f5f5;
                cursor: pointer;
                display: inline-block;
                float: left;
                margin-left: 5px;
                padding: 8px 16px;
                text-decoration: none;
                transition: all .5s;
                
            }
                
    </style>
<!-- slider Area Start---------->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="single-slider slider-height2 d-flex align-items-center" data-background="../Content/MyPham/assets/img/hero/category.jpg">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>Tin Tức</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!--================Blog Area =================--->
<section class="blog_area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">
                    @foreach (var item in Model)
                    {
                        <article class="blog_item">
                            <div class="blog_item_img">
                                <img class="card-img rounded-0" src="../Content/MyPham/assets/img/tt.jpg" alt="">
                                <!-- <a href="#" class="blog_item_date"> -->
                                <!-- <h3>15</h3> -->
                                <!-- <p>Jan</p> -->
                                <!-- </a> -->
                            </div>

                            <div class="blog_details">
                                <a class="d-inline-block" href="/newDetail/@item.Slug">
                                    <h2>@Html.Raw(slitString.TruncateAtWord(item.Title, 80))</h2>
                                </a>
                                <p>
                                    @Html.Raw(slitString.TruncateAtWord(item.Description, 200))
                                </p>
                                <ul class="blog-info-link">
                                    <li><a href="#"><i class="fa fa-calendar"></i> @item.DateCreated.ToString("dd/MM/yyyy")</a></li>

                                </ul>
                            </div>
                        </article>
                    }


                    <div class="col text-center">
                        Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                        <br />
                        <span>@Html.PagedListPager(Model, page => Url.Action("Products", "Products", new { page }))</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    @Html.Action("NewsFeatured", "New")
                    <aside class="single_sidebar_widget instagram_feeds">
                        <h4 class="widget_title">Social</h4>
                        <ul class="instagram_row flex-wrap">
                            <li>
                                <a href="#">
                                    <img class="img-fluid" src="../Content/MyPham/assets/img/post/tiktok.png" alt="">
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <img class="img-fluid" src="../Content/MyPham/assets/img/post/instagram-sketched.png" alt="">
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <img class="img-fluid" src="../Content/MyPham/assets/img/post/facebook.png" alt="">
                                </a>
                            </li>


                        </ul>
                    </aside>

                </div>
            </div>
        </div>
    </div>
</section>